# ===========================================
# Database Configuration
# ===========================================
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=secret
DATABASE_NAME=partition_db

# ===========================================
# Partition Management Configuration
# ===========================================
PARTITION_ENABLED=true
PARTITION_CRON=0 2 * * *

# Multiple tables configuration (JSON array)
# Each table has:
# - tableName: Name of the partitioned table
# - retentionDays: How long to keep data before cleanup
# - preCreateDays: Create partitions N days ahead
# - cleanupAction: "DROP" (permanent delete) or "TRUNCATE" (remove data, keep structure)
PARTITION_CONFIG=[{"tableName":"event_logs","retentionDays":30,"preCreateDays":7,"cleanupAction":"DROP"},{"tableName":"metrics","retentionDays":90,"preCreateDays":14,"cleanupAction":"TRUNCATE"}]

# ===========================================
# Application Configuration
# ===========================================
PORT=3000
NODE_ENV=development
